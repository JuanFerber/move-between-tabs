{
  "manifest_version": 3,
  "name": "Navegador de pestañas",
  "version": "1.0",
  "description": "Extensión que gestiona la combinación de teclas para cerrar, crear y moverte entre las pestañas de un navegador.",
  "permissions": ["tabs", "commands"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "commands": {
    "switch-left": {
      "suggested_key": {
        "default": "Alt+Shift+Left"
      },
      "description": "Mover a la pestaña previa"
    },
    "switch-right": {
      "suggested_key": {
        "default": "Alt+Shift+Right"
      },
      "description": "Mover a la pestaña siguiente"
    },
    "open-and-focus-new-tab": {
      "suggested_key": {
        "default": "Alt+Shift+Up"
      },
      "description": "Abrir y enfocar una nueva pestaña"
    },
    "close-actual-tab": {
      "suggested_key": {
        "default": "Alt+Shift+Down"
      },
      "description": "Cerrar la pestaña actual"
    }
  }
}
